<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SammsGuessingGameFinal.MainPage"
             xmlns:local="clr-namespace:SammsGuessingGameFinal"
             BackgroundColor="White">

    <Grid ColumnDefinitions="Auto,*"
          Padding="20"
          ColumnSpacing="30"
          RowSpacing="0"
          VerticalOptions="FillAndExpand"
          HorizontalOptions="FillAndExpand">

        <!-- LEFT: Player Controls -->
        <VerticalStackLayout
            Grid.Column="0"
            Spacing="20"
            HorizontalOptions="Start"
            VerticalOptions="Start"
            WidthRequest="250">

            <!-- Player Name -->
            <Frame CornerRadius="8"
                   BorderColor="Gray"
                   Padding="10"
                   BackgroundColor="White"
                   WidthRequest="220"
                   HasShadow="False"
                   Margin="0,10,0,0"
                   HorizontalOptions="Start"
                   VerticalOptions="Center">

                <Entry x:Name="PlayerNameEntry"
                       Placeholder="Enter your name"
                       BackgroundColor="Transparent"
                       TextColor="Black"
                       FontSize="16" />
            </Frame>

            <!-- Difficulty -->
            <Label Text="Select Difficulty:"
                   FontSize="Medium"
                   TextColor="Black" />

            <HorizontalStackLayout Spacing="10">
                <Button Text="Easy"
                        Clicked="OnDifficultySelected"
                        BackgroundColor="LightGray" />

                <Button Text="Medium"
                        Clicked="OnDifficultySelected"
                        BackgroundColor="LightGray" />

                <Button Text="Hard"
                        Clicked="OnDifficultySelected"
                        BackgroundColor="LightGray" />
            </HorizontalStackLayout>
			
		    <!-- HighScores -->
            <Button Text="🏆 View High Scores"
                    Clicked="ViewHighScoresButton_Click"
                    BackgroundColor="Purple"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="10"
                    HorizontalOptions="Start"
                    Margin="0,10,0,0"
                    WidthRequest="180" />

            <!-- ScoresReset -->
            <Button Text="Reset High Scores"
                    Clicked="ResetHighScoresButton_Click"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="10"
                    WidthRequest="180"
                    HorizontalOptions="Start"
                    Margin="0,5,0,0" />
        </VerticalStackLayout>

        <!-- RIGHT: Game Area -->
        <VerticalStackLayout
            Grid.Column="1"
            Spacing="20"
            HorizontalOptions="Center"
            VerticalOptions="FillAndExpand">

            <!-- Start Button -->
            <Button x:Name="StartButton"
                    Text="Start Game"
                    Clicked="StartButton_Click"
                    BackgroundColor="Purple"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="150"
                    HorizontalOptions="Center" />

            <!-- Timer -->
            <Label x:Name="TimerLabel"
                   Text="Time Left: 60 seconds"
                   FontSize="18"
                   TextColor="Black"
                   HorizontalOptions="Center" />

            <!-- Game Grid -->
            <ScrollView VerticalOptions="FillAndExpand"
                        HorizontalOptions="FillAndExpand">
                <Grid x:Name="CardGrid"
                      RowSpacing="4"
                      ColumnSpacing="4"
                      Padding="0"
                      HorizontalOptions="Center"
                      VerticalOptions="FillAndExpand" />
            </ScrollView>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
